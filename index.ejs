<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Students_IL</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f31036d50f.js" crossorigin="anonymous"></script>

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/job-portal-website-template/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/job-portal-website-template/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-1">
            <a class="navbar-brand d-flex align-items-center text-center py-5 px-2 px-lg-5" href="index"><img
                    src="/job-portal-website-template/img/LOGO2.png" alt=""></a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0" style="font-family: Segoe UI Semibold;">

                    <a href="/CV" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block me-3"
                        style="font-family: Segoe UI Semibold; font-size: large;"> יצירת קורות חיים<i
                            class="fa fa-arrow-right ms-3 "></i></a>
                    <a href="/notifications_student" class="nav-item nav-link" style="font-size: medium;"><i
                            class="fa-regular fa-bell" style="padding-right:5px;"></i>התראות</a>
                    <a href="#top1" class="nav-item nav-link" style="font-size: medium;"></i>משרות</a>
                    <a href="#top" class="nav-item nav-link" style="font-size: medium;">אודות</a>
                    <a href="index" class="nav-item nav-link " style="font-size: medium;">בית</a>
                    <div>
                            <a class="nav-item nav-link" href="/enter"><i class="fa-solid fa-arrow-right-from-bracket"
                                    style="padding-right:5px;"></i>התנתקות</a>


                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->


        <!-- Carousel Start -->
        <div class="container-fluid p-0">
            <div class="owl-carousel header-carousel position-relative">
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="/job-portal-website-template/img/carousel-1.jpg" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
                        style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4"
                                        style="font-family: Segoe UI Semibold;" dir="rtl">מצא את המשרה המושלמת עבורך
                                    </h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">אתר המשרות הראשון בישראל</p>
                                    <a href="/search_job"
                                        class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft"
                                        style="font-family: Segoe UI Semibold;">חפש משרה</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="/job-portal-website-template/img/carousel-2.jpeg" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
                        style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4"
                                        style="font-family: Segoe UI Semibold;" dir="rtl">אינסוף אפשרויות במקום אחד</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">אתר המשרות הראשון מסוגו בישראל</p>
                                    <a href="/search_job"
                                        class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft"
                                        style="font-family: Segoe UI Semibold;">חפש משרה</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Carousel End -->


        <!-- Category Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s"
                    style="font-family: Segoe UI Semibold;font-size:x-large ;" dir="rtl">
                    המשרה הבאה שלך במרחק צעד קטן בלבד...</h1>
                <div class="row g-4">
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                        <a class="cat-item rounded p-4" href="/choosedetails">
                            <i class="fa-solid fa-pen fa-3x text-primary mb-4"></i>
                            <h6 class="mb-3">עדכון חיפוש משרה</h6>

                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                        <a class="cat-item rounded p-4" href="/changestudentprofile">
                            <i class="fa fa-3x fa-user-tie text-primary mb-4"></i>
                            <h6 class="mb-3">עדכון פרטים אישיים</h6>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                        <a class="cat-item rounded p-4" href="/favorite">
                            <i class="fa-solid fa-heart fa-3x text-primary mb-4"></i>
                            <h6 class="mb-3">משרות במועדפים</h6>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                        <a class="cat-item rounded p-4" href="/studentcontact">
                            <i class="fa fa-3x fa-headset text-primary mb-4"></i>
                            <h6 class="mb-3">יצירת קשר עם סוכן</h6>
                        </a>
                    </div>
                    <a id="top"></a>
                </div>
            </div>
        </div>
        <!-- Category End -->


        <!-- About Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                        <div class="row g-0 about-bg rounded overflow-hidden">
                            <div class="col-6 text-start">
                                <img class="img-fluid w-100" src="/job-portal-website-template/img/about-1.jpg">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid" src="/job-portal-website-template/img/about-2.jpg"
                                    style="width: 90%; margin-top: 10%;">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid" src="/job-portal-website-template/img/about-3.jpg"
                                    style="width: 90%;">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid w-75" src="/job-portal-website-template/img/about-4.jpg"
                                    style="width: 90%; margin-right: 50%;">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s" dir="rtl"
                        style="font-family: Segoe UI Semibold;">
                        <h1 class="mb-4" style="font-family: Segoe UI Semibold;">אז למה אנחנו אתר הדרושים של הסטודנטים
                            בישראל</h1>
                        <p><i class="fa fa-check text-primary me-3"></i>פלטפורמה היחידה בישראל לחיפוש משרה עבור סטודנטים
                            בלבד</p>
                        <p><i class="fa fa-check text-primary me-3"></i>פועלת למיצוי ציפיות הסטודנטים במקום עבודתם התואם
                            את כישוריהם</p>
                        <p><i class="fa fa-check text-primary me-3"></i>מאפשרת לסטונדטים לצבור ניסיון בתחום לימודיהם</p>
                        <p><i class="fa fa-check text-primary me-3"></i>מסייעת לצמצום היקף מחוסרי העבודה בקרב הסטודנטים
                        </p>
                        <p><i class="fa fa-check text-primary me-3"></i>עוזרת למעסיקים למצוא במהירות וביעילות את העובדים
                            המתאימים ביותר</p>
                    </div>
                </div>
            </div>
            <a id="top1"></a>
        </div>
        <!-- About End -->


        <!-- Jobs Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s" style="font-family: Segoe UI Semibold;">
                    משרות פנויות</h1>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                    <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                    </ul>
                    <div class="tab-content" dir="rtl">
                        <div class="job-item p-4 mb-4" dir="rtl">
                            <div class="row 4" dir="rtl">
                                <% if(Jobs.length>0){ %>
                                    <% Jobs.forEach(job=>{ %>
                                        <div class="col-sm-12 col-md-18 d-flex align-items-right" dir="rtl">
                                            <a class="btn-light btn-square me-3"><i
                                                    class="far fa-solid fa-magnifying-glass"></i></a>
                                            <div class="text-truncate me-3" dir="rtl">
                                                <div style="text-align: right;" style="font-family: Segoe UI Semibold;">
                                                    <h5 class="mb-3 " style="font-family: Segoe UI Semibold;">שם המשרה:
                                                        <%= job.title %>
                                                    </h5>
                                                </div>
                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="fa fa-map-marker-alt text-primary me-2"
                                                            dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;">מיקום:
                                                            <%= job.location %>
                                                        </h9>
                                                    </span>
                                                </div>


                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="far fa-clock text-primary me-2" dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;">היקף:
                                                            <%= job.scope %>
                                                        </h9>

                                                    </span>
                                                </div>
                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="far fa-solid fa-circle-info text-primary me-2"
                                                            dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;">תיאור
                                                            המשרה:
                                                            <%= job.detail %>
                                                        </h9>
                                                    </span>
                                                </div>
                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="far fa-regular fa-clipboard text-primary me-2"
                                                            dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;">דרישות:
                                                            <%= job.requirements %>
                                                        </h9>
                                                    </span>
                                                </div>

                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="far fa-solid fa-tag text-primary me-2" dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;"> תחום:
                                                            <%= job.domain %>
                                                        </h9>
                                                    </span>
                                                </div>

                                                <div style="text-align: right;">
                                                    <span class="text-truncate me-3" dir="rtl"><i
                                                            class="fa fa-solid fa-at text-primary me-2" dir="rtl"></i>
                                                        <h9 class="mb-3" style="font-family:Segoe UI Semibold;"> מייל
                                                            מגייס:
                                                            <%= job.email %>
                                                        </h9>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div
                                            class="col-sm-12 col-md-12 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-1">
                                                <form action="/index_post/<%= user %>/<%=job.title %>/<%=job.email  %>"
                                                    method="post">
                                                    <button class="btn btn-primary">הגשת מועמדות למשרה</button>
                                                             
                                                </form>
                                                <form
                                                    action="/index/<%= job.title%>/<%= job.location %>/<%= job.scope %>/<%= job.requirements %>/<%= job.domain%>/<%= job.detail %>/<%= job.email %>  "
                                                    method="POST">
                                                    <button class="btn btn-light btn-square me-3">
                                                        <i class="far fa-heart text-primary"></i></button>
                                                </form>
                                            </div>
                                        </div>
                                        <% }) %>
                                            <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jobs End -->



    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <h1 class="text-center mb-5" dir="rtl" style="font-family: Segoe UI Semibold;">לקוחות ממליצים!</h1>
            <div class="owl-carousel testimonial-carousel">
                <div class="testimonial-item bg-light rounded p-4" dir="rtl">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>גל יוסף, 24 סטודנטית להנדסת תוכנה בסמי שמעון ב"ש: " תודה רבה לStudent_IL על מציאת המשרה
                        המושלמת עבורי תוך זמן קצר בלבד."</p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded"
                            src="/job-portal-website-template/img/testimonial-1.jpg" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1" style="font-family: Segoe UI Semibold;"> גל יוסף </h5>
                        </div>
                    </div>
                </div>
                <div class="testimonial-item bg-light rounded p-4" dir="rtl">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>טל רפאלוב, 23 סטודנט להנדסת חשמל "בזכות Student_IL צברתי ניסיון רב במהלך התואר במשרת סטודנט."
                    </p>
                    <div class="d-flex align-items-center" dir="rtl">
                        <img class="img-fluid flex-shrink-0 rounded"
                            src="/job-portal-website-template/img/testimonial-2.jpg" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1" style="font-family: Segoe UI Semibold;"> טל ישראל רפאלוב </h5>
                        </div>
                    </div>
                </div>
                <div class="testimonial-item bg-light rounded p-4" dir="rtl">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>אסיף פרץ, 23 סטודנט מדעי המחשב: "הגעתי ל Student_IL בעקבות חבריי לתואר. לאחר חיפוש קצר מצאתי
                        משרה שעונה על כל דרישותיי. ממליץ בחום!"</p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded"
                            src="/job-portal-website-template/img/testimonial-3.jpg" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1" style="font-family: Segoe UI Semibold;">אסיף פרץ</h5>
                        </div>
                    </div>
                </div>
                <div class="testimonial-item bg-light rounded p-4" dir="rtl">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>אפק ביטון, 22 סטונדטית לחינוך: "תודה רבה ל Student_IL בזכותם מצאתי משרה לכל החיים!!!." </p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded"
                            src="/job-portal-website-template/img/testimonial-4.jpg" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1" style="font-family: Segoe UI Semibold;">אפק ביטון</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial End -->


    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s"
            style="font-family: Segoe UI Semibold; color:#fff;">צור קשר</h1>
        <div class="container py-5">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-md-4 wow fadeIn" data-wow-delay="0.1s">
                        <div class="d-flex align-items-center bg-light rounded p-4">
                            <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3"
                                style="width: 45px; height: 45px;">
                                <i class="fa fa-map-marker-alt text-primary"></i>
                            </div>
                            <span style="color:#2B3940;font-family: Segoe UI Semibold; " dir="rtl">המכללה האקדמית
                                להנדסה "סמי שמעון", באר שבע</span>
                        </div>
                    </div>
                    <div class="col-md-4 wow fadeIn" data-wow-delay="0.3s">
                        <div class="d-flex align-items-center bg-light rounded p-4">
                            <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3"
                                style="width: 45px; height: 45px;">
                                <i class="fa fa-envelope-open text-primary"></i>
                            </div>
                            <span style="color:#2B3940;font-family: Segoe UI Semibold;"
                                dir="rtl">Students_IL@gmail.com</span>
                        </div>
                    </div>
                    <div class="col-md-4 wow fadeIn" data-wow-delay="0.5s">
                        <div class="d-flex align-items-center bg-light rounded p-4">
                            <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3"
                                style="width: 45px; height: 45px;">
                                <i class="fa fa-phone-alt text-primary"></i>
                            </div>
                            <span style="color:#2B3940;font-family: Segoe UI Semibold;" dir="rtl">1-800-207-777</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- נגישות -->
    <script src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript"></script>
    <script src="https://www.negishim.com/accessibility/accessibility_pro.js" type="text/javascript"></script>
    <script type="text/javascript">
        accessibility_rtl = true;
        pixel_from_side = 5;
        pixel_from_start = 106;
    </script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/job-portal-website-template/js/main.js"></script>
</body>

</html>